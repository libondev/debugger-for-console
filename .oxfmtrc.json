{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "semi": false,
  "tabWidth": 2,
  "endOfLine": "lf",
  "singleQuote": true,
  "trailingComma": "all",
  "bracketSpacing": true,
  "insertFinalNewline": true,
  "ignorePatterns": [
    "dist/",
    "playground/",
    "node_modules/"
  ]
}
